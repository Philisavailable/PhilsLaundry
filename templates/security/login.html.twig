{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="text-center col-6 mx-auto h-100">

    <form method="post">
        {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
        {% endif %}



        <h1 class="my-4">Connexion</h1>
        <label class="mt-4" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2"
            autocomplete="email" required autofocus>

        <label class="mt-4" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control my-2"
            autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-outline-secondary my-4" type="submit">Se connecter</button>

        <p class="my-2"><a class="text-dark" href="{{ path('forgotten_password') }}">Mot de passe oublié</a></p>
        <p class="mt-5">Pas de compte ? <a class="text-dark text-decoration-underline fw-bold" href="{{ path('app_register')}}">inscrivez-vous</a></p>
    </form>
</div>

{% endblock %}