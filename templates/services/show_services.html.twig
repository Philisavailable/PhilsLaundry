{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
<h1 class="text-center my-5">Services</h1>
<div class="d-flex flex-wrap">

{% for service in services %}
<div class="card m-3" style="max-width: 580px; min-height: 200px;">
  <div class="row g-0 h-100">
    <div class="col-6 position-relative p-0 overflow-hidden">
      <img class="card-img-top w-100 h-100 object-fit-cover rounded-start" src="{{ asset('services/' ~ service.photo) }}" alt="image {{ service.title }}">
      <a href="{% if app.user %}{{ path('add_order') }}{% else %}{{ path('app_login') }}{% endif %}">
        <div class="position-absolute top-0 start-0 end-0 bottom-0 d-flex align-items-center justify-content-center text-center bg-dark bg-opacity-50 text-white p-3 rounded-start">
          <div>
            <h5 class="card-title mb-2">{{ service.title }}</h5>
            <i class="bi bi-arrow-right fs-3"></i>
          </div>
        </div>
      </a>
    </div>
    <div class="col-6">
      <div class="card-body">
        <p class="card-text">{{ service.description }}</p>
        <h6 class="card-text">Prix au kg : {{ service.price }} â‚¬</h6>
      </div>
    </div>
  </div>
</div>
{% else %}
<h2 class="text-center my-5">Pas de service pour le moment</h2>
{% endfor %}
</div>

{% endblock %}
